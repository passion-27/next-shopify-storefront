{
  "name": "next-shopify-storefront",
  "description": "Next Shopify Storefront",
  "repository": "https://github.com/maxvien/next-shopify-storefront.git",
  "version": "3.0.0",
  "license": "MIT",
  "author": {
    "name": "Vien Dinh",
    "email": "maxvien@gmail.com",
    "url": "https://github.com/maxvien"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && prettier --check src",
    "fix": "next lint --fix && prettier --write src",
    "codegen": "node codegen.mjs",
    "predev": "npm run codegen",
    "prebuild": "npm run codegen"
  },
  "dependencies": {
    "next": "13.2.1"
  },
  "devDependencies": {
    "@headlessui/react": "^1.7.12",
    "@heroicons/react": "^2.0.16",
    "@types/node": "18.14.1",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "autoprefixer": "^10.4.13",
    "clsx": "^1.2.1",
    "dotenv": "^16.0.3",
    "eslint": "8.34.0",
    "eslint-config-next": "13.2.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-tailwindcss": "^3.9.0",
    "graphql-zeus": "^5.2.8",
    "immer": "^9.0.19",
    "nextjs-progressbar": "^0.0.16",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-use": "^17.4.0",
    "tailwindcss": "^3.2.7",
    "type-fest": "^3.6.1",
    "typescript": "4.9.5",
    "use-immer": "^0.8.1",
    "zod": "^3.21.4"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "plugin:tailwindcss/recommended",
      "prettier"
    ],
    "rules": {
      "no-unused-vars": "warn"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}
